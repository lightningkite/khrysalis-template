<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

        <FrameLayout android:layout_width="match_parent" android:layout_height="200dp">
            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|top"
                    android:text="left|top"/>
            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|bottom"
                    android:text="left|bottom"/>
            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|center_vertical"
                    android:text="left|cv"/>

            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="center_horizontal|top"
                    android:text="ch|top"/>
            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="ch|bottom"/>
            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="ch|cv"/>

            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="right|top"
                    android:text="right|top"/>
            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="right|bottom"
                    android:text="right|bottom"/>
            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:text="right|cv"/>

        </FrameLayout>

        <FrameLayout android:layout_width="match_parent" android:layout_height="200dp">
            <TextView
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|top"
                    android:text="top"/>
            <TextView
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|bottom"
                    android:text="bottom"/>
            <TextView
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|center_vertical"
                    android:text="cv"/>

        </FrameLayout>

        <FrameLayout android:layout_width="match_parent" android:layout_height="200dp">
            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="left|center_vertical"
                    android:text="left"/>
            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:text="right"/>
            <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="ch"/>

        </FrameLayout>

        <FrameLayout android:layout_width="match_parent" android:layout_height="200dp">
            <TextView
                    style="@style/Body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:text="fill"/>

        </FrameLayout>

        <TextView
                android:id="@+id/one"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:text="View One"/>

        <TextView
                android:id="@+id/two"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:text="View Two"/>

        <TextView
                android:id="@+id/three"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:text="View Three"/>

        <TextView
                android:id="@+id/four"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:text="View Four"/>

        <TextView
                android:id="@+id/five"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:text="View Five"/>
    </LinearLayout>
</ScrollView>
